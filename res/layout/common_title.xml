<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity" >


    <!-- Login form -->

    <RelativeLayout
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/title_backgroud"> 
                                    <TextView
                                          android:onClick="onClick"
                                        android:id="@+id/text_title"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"
                                        android:textColor="@color/title_text_color"
                                        android:text="title" 
                                        android:textSize="@dimen/title_text_size"/>

                                    <TextView
                                        android:paddingRight="@dimen/title_padding_layout"
                                        android:onClick="onClick"
                                        android:id="@+id/btn_right"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBottom="@+id/text_title"
                                        android:layout_alignParentRight="true"
                                        android:textColor="@color/title_right_text_color"
                                        android:text="textbutton" 
                                        android:textSize="@dimen/title_text_size"/>

                                    <ImageView
                                        android:id="@+id/return_left"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentLeft="true"
                                        android:layout_centerVertical="true"
                                        android:onClick="onClick"
                                        android:paddingLeft="@dimen/return_padding_left"
                                        android:src="@drawable/returnbtn" />

    </RelativeLayout>

                 <View
                     android:id="@+id/title_bottom_line"
                     android:layout_width="fill_parent"
                     android:layout_height="@dimen/title_tottom_interval_line_height"
                     android:background="@color/title_bottom_line_color" />
<!-- 内容框架 -->
<LinearLayout
    android:id="@+id/ly_content"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    
    
</LinearLayout>
   

</LinearLayout>